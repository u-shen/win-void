{
  "debug.console.fontSize": 14,
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontLigatures": true,
  "editor.fontSize": 13,
  "editor.renderWhitespace": "selection",
  "editor.selectionClipboard": false,
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "gitlens.currentLine.enabled": false,
  "phpcs.standard": "Drupal",
  "terminal.integrated.fontSize": 14,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "window.menuBarVisibility": "toggle",
  "window.zoomLevel": -0.04,
  "workbench.activityBar.visible": true,
  "workbench.colorTheme": "Gruvbox Dark Hard",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.statusBar.visible": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "beautify.onSave": true,
  "editor.formatOnSave": true,
  "beautify.JSfiles": ["js", "json", "jsbeautifyrc", "jshintrc", "ts"],
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.lineNumbers": "relative",
  "editor.cursorBlinking": "solid",
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "redhat.telemetry.enabled": false,
  "debug.javascript.autoAttachFilter": "onlyWithFlag",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.renderLineHighlight": "line",
  "workbench.colorCustomizations": {
    "editor.lineHighlightBackground": "#242323",
    "statusBar.background": "#1d5b8f",
    "statusBar.debuggingBackground": "#456151"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "window.restoreFullscreen": true,
  "workbench.editor.restoreViewState": true,
  "window.newWindowDimensions": "maximized",
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "go.toolsManagement.autoUpdate": true,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.inlineSuggest.enabled": false,
  // VIM Keybidings
  "editor.scrollBeyondLastLine": false, // recommended by neovim
  "vim.leader": "<space>",
  "vim.easymotion": true,
  "vim.surround": true,
  "vim.incsearch": true,
  "vim.useCtrlKeys": true,
  "vim.nohlsearch": true,
  "vim.sneak": false,
  "vim.easymotionKeys": "hklyuiopnmqwertzxcvbasdgjf",
  "vim.relativenumber": true,
  "vim.easymotionMarkerooundColor": "#020202",
  "vim.highlightedyank.enable": true,
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindings": [
    {
      "before": ["<S-tab>"],
      "commands": ["workbench.action.previousEditor"]
    },
    {
      "before": ["<tab>"],
      "commands": ["workbench.action.nextEditor"]
    },
    {
      "before": ["Y"],
      "after": ["\"", "+", "y", "$"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["y"],
      "after": ["\"", "*", "y"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<Esc>"],
      "commands": [":nohl"]
    },
    {
      "before": ["K"],
      "commands": ["lineBreakInsert"],
      "silent": true
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["revealInExplorer"]
    },
    {
      "before": ["leader", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    }
  ],
  "vim.handleKeys": {
    "<C-a>": true,
    "<C-f>": true,
    // VS Code new marker @ next occurence
    "<C-d>": true,
    // Copy
    "<C-c>": false,
    // Cut
    "<C-x>": true,
    // Paste
    "<C-v>": true,
    "<C-z>": false,
    "<C-y>": false
  },
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  }
}
