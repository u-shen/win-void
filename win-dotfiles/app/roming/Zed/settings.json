// # =============================================================================== #
// # Zed Configurations:                                                             #
// # =============================================================================== #
{
    "vim_mode": true,
    "ui_font_size": 14,
    "buffer_font_size": 12,
    "buffer_line_height": {
        "custom": 1.3
    },
    "telemetry": {
        "diagnostics": false
    },
    "tab_bar": {
        "show": true,
        "show_nav_history_buttons": false,
        "show_tab_bar_buttons": false
    },
    "toolbar": {
        "breadcrumbs": false,
        "quick_actions": false
    },
    "theme": {
        "mode": "system",
        "light": "One Light",
        "dark": "Everblush"
    },
    "terminal": {
        "font_family": "JetBrainsMono Nerd Font",
        "blinking": "on",
        "shell": {
            "program": "nu"
        }
    },
    "scrollbar": {
        "show": "never",
        "cursors": false,
        "git_diff": true,
        "search_results": true,
        "selected_symbol": true,
        "diagnostics": "all"
    },
    "preview_tabs": {
        "enabled": true,
        "enable_preview_from_file_finder": false,
        "enable_preview_from_code_navigation": false
    },
    "centered_layout": {
        "left_padding": 0.1,
        "right_padding": 0.1
    },
    "git": {
        "git_gutter": "tracked_files",
        "inline_blame": {
            "enabled": false
        }
    },
    "jupyter": {
        "kernel_selections": {
            "python": "conda-env",
            "typescript": "node",
            "javascript": "node",
            "r": "ark"
        }
    },
    "languages": {
        "Python": {
            "language_servers": [
                "pylsp",
                "ruff"
            ],
            "format_on_save": "on"
        },
        "typescript": {
            "language_servers": [
                "tsserver",
                "prettier",
                "!eslint"
            ],
            "format_on_save": "on"
        },
        "typescriptreact": {
            "language_servers": [
                "tsserver",
                "prettier",
                "!eslint"
            ],
            "format_on_save": "on"
        },
        "javascriptreact": {
            "language_servers": [
                "tsserver",
                "prettier",
                "!eslint"
            ],
            "format_on_save": "on"
        },
        "javascript": {
            "language_servers": [
                "tsserver",
                "prettier",
                "!eslint"
            ],
            "format_on_save": "on"
        },
        "html": {
            "language_servers": [
                "tsserver",
                "prettier",
                "!eslint"
            ],
            "format_on_save": "on"
        }
    },
    "lsp": {
        "pylsp": {
            "settings": {
                "pylsp.plugins.pylsp_django": {
                    "enabled": true
                },
                "pylsp.plugins.jedi_completion": {
                    "include_params": true
                }
            }
        },
        "ruff": {
            "initialization_options": {
                "settings": {}
            }
        }
    }
}
