{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.28/schema.json",
  "app_specific_configuration_path": "C:/Users/LLI/.config/komorebi/applications.json",
  "bar_configurations": ["$Env:USERPROFILE/.config/komorebi/komorebi.bar.json"],
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "unmanaged_window_operation_behaviour": "Op",
  "window_container_behaviour": "Create",
  "mouse_follows_focus": true,
  "default_workspace_padding": 1,
  "default_container_padding": 1,
  "transparency": false,
  "transparency_alpha": 250,
  "border": true,
  "border_width": 3,
  "border_offset": -1,
  "border_implementation": "Komorebi",
  "border_style": "Square",
  "theme": {
    "palette": "Base16",
    "name": "GruvboxMaterialDarkMedium",
    "accent": "Base0D",
    "single_border": "Base0C",
    "unfocused_border": "Base02",
    "floating_border": "Base0C",
    "stack_border": "Base0D",
    "monocle_border": "Base03"
  },
  "animation": {
    "enabled": false,
    "duration": 300,
    "style": "EaseOutBack",
    "fps": 60
  },
  "stackbar": {
    "height": 25,
    "mode": "OnStack",
    "tabs": {
      "font_family": "JetBrainsMono NF",
      "font_size": 18,
      "width": 100,
      "focused_text": "#689d6a",
      "unfocused_text": "#b3b3b3",
      "background": "#1d2021"
    }
  },
  "ignore_rules": [
    {
      "kind": "Class",
      "id": "yasb-bar",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "yasb.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "mpv.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "shotcut.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "obs64.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "explorer.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Title",
      "id": "Settings",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Title",
      "id": "Microsoft Store",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "Everything.exe",
      "matching_strategy": "Equals"
    }
  ],
  "floating_applications": [
    {
      "kind": "Title",
      "id": "file-cli",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Title",
      "id": "term-float",
      "matching_strategy": "Equals"
    }
  ],
  "monitors": [
    {
      "workspaces": [
        {
          "name": "I",
          "layout": "VerticalStack"
        },
        {
          "name": "II",
          "layout": "VerticalStack"
        },
        {
          "name": "III",
          "layout": "VerticalStack"
        },
        {
          "name": "IV",
          "layout": "VerticalStack"
        },
        {
          "name": "V",
          "layout": "VerticalStack"
        },
        {
          "name": "VI",
          "layout": "VerticalStack"
        },
        {
          "name": "VII",
          "layout": "VerticalStack"
        }
      ]
    }
  ]
}
