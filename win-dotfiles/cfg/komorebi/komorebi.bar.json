{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.31/schema.bar.json",
  "monitor": {
    "index": 0,
    "work_area_offset": {
      "left": 0,
      "top": 0,
      "right": 0,
      "bottom": 0
    }
  },
  "font_family": "JetBrainsMono NF",
  "theme": {
    "palette": "Base16",
    "name": "GruvboxMaterialDarkHard",
    "accent": "Base0D"
  },
  "transparency_alpha": 0,
  "grouping": {
    "kind": "Widget",
    "rounding": 0,
    "style": "CtByteWithShadow"
  },
  "left_widgets": [
    {
      "Komorebi": {
        "workspaces": {
          "enable": true,
          "hide_empty_workspaces": false
        },
        "layout": {
          "enable": true,
          "display": "Icon"
        },
        "focused_window": {
          "enable": true,
          "display": "IconAndText"
        }
      }
    }
  ],
  "center_widgets": [
    {
      "Date": {
        "enable": true,
        "format": "DayDateMonthYear"
      }
    },
    {
      "Time": {
        "enable": true,
        "format": "TwentyFourHour"
      }
    }
  ],
  "right_widgets": [
    {
      "Media": {
        "enable": true
      }
    },
    {
      "Storage": {
        "enable": false
      }
    },
    {
      "Memory": {
        "enable": false
      }
    },
    {
      "Battery": {
        "enable": true
      }
    },
    {
      "Network": {
        "enable": true,
        "show_total_data_transmitted": false,
        "show_network_activity": false
      }
    }
  ]
}
